<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widget_dim"
    android:layout_height="@dimen/widget_dim"
    android:background="@drawable/shape"
    android:minHeight="@dimen/widget_dim"
    android:resizeMode="horizontal|vertical">


    <ImageView
        android:id="@+id/appWidget_machine_picture"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:src="@drawable/steele_logo_100" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/appWidget_machine_picture"
        android:layout_alignParentBottom="true"
        android:text="@string/loading"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="italic|bold" />

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/widgetProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>